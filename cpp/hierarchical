#include<iostream>
using namespace std;
class food
{
    public:
        void ayoo()
        {
            cout<<"food is life."<<endl;
        } 
};
class pizza : public food
{
    public:
        void byoo()
        {
            cout<<"pizza is cheezy."<<endl;
        }
};
class pasta : public food
{
    public:
        void cyoo()
        {
            cout<<"pasta is saucy"<<endl; 
        }
};
int main()
{
    //create the obj for pizza
    pizza p1;
    p1.ayoo();
    p1.byoo();
    //create the obj for pasta
    pasta p2;
    p2.ayoo();
    p2.cyoo();

    return 0;
}
